    <script>
        var vendoer = document.querySelector(".vendor")
        var activeUser = "<%= user.active%>"
        var activeVendoer = "<%=user.userVendorData ? user.userVendorData.isActive : '' %>"
        function makeVendor(e) {
            if(e.target.checked) {
                var child = vendoer.cloneNode(true)
                child.classList.remove("d-none")
                document.querySelector(".main").appendChild(child)
            } else {
                document.querySelector(".vendor").remove()        
            }
        }

        function cancelUserActive(e) {
            if(activeUser == "true" && !e.target.checked) {
                var child = document.createElement("textarea")
                child.name="cancelUser" 
                child.className="cancelUser col-12 form-controll"
                child.placeholder = "enter reson for cancel user" 
                var div = document.createElement("div")
                div.appendChild(child)
                div.className = "col-12"
                document.querySelector(".rowOne").appendChild(div)
            } else {
                document.querySelector(".cancelUser").remove()
            }
        }

        function cancelVendoerActive(e) {
