                                        <li class="fa fa-star <%= element.sumRate < 5 ? "disable" : "" %>"></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </section>

            </div>
        </div>
        <!-- End Section Top Sellers -->
        <% } %>


        <!-- Start Section Top Sellers -->
        <% if (productRelatedWithSearch.length >= 5) { %>
            <div class="top-sellers">
                <div class="container">
                    <div class="header">
                        <h6 style="color:#222;margin: 20px 0;">منتجات ترغب فيها</h6>
                    </div>
                    <section class="center slider">
                        <% productRelatedWithSearch.forEach(element => { %>
