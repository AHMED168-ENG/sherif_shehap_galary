                        <% }) %>
                    </section>

                </div>
            </div>
        <% } %>
        <!-- End Section Top Sellers -->

        <% if (spechialVendoer) { %>
            <!-- Start Section Top Sellers -->
            <div class="top-sellers">
                <div class="container">
                    <div class="header">
                        <h6>
                            <span class="title">أفضل البائعين</span>
                        </h6>
                    </div>
                    <section class="center slider spechialVendoer">
                        <% spechialVendoer.forEach(element => { %>
                            <div>
                                <a href="/userProfile/<%= element.id %>">
                                    <div class="slide-content text-center">
                                        <img src="/admin/asset/images/users_photo/<%= element.userVendorData.vendorImage.split("--")[0] %>" class="img-fluid" alt="0" />
                                        <h4><%= element.userVendorData.vendorFname + " " + element.userVendorData.vendorLname %></h4>
                                        <p><i class="fa fa-map-marker-alt"></i> <%= element.addres.split(",")[1] + " " + element.addres.split(",")[2] %></p>
                                        <div>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
