<body>
<%- include("../inclueds/uper_headerUser")  %> 
<!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||| -->

        <%- include("../inclueds/search")  %> 


        
        <% if (carosalsTop.length > 0) { %>
            <!-- Start Section Slider -->
            <div id="slider-home" class="carousel slide p-3" data-ride="carousel">
                <div class="container">
                    <div class="carousel-inner">
                        <% carosalsTop.forEach((element , i) => { %>
                            <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
                                <a href="AllProduct?catigory=<%= element.catigory %>&search=">
                                    <div class="row">
                                        <div class="col-md-6 text-center image">
                                            <img src="/admin/asset/images/carosals_photo/<%= element.images.split("--")[0] %>" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="col-md-6 text">
                                            <h2 class="slider-title"><%= element["header_" + defaultLang] %></h2>
                                            <p><%= element["description_" + defaultLang] %></p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                    </div>

                        <a class="carousel-control-prev" href="#slider-home" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#slider-home" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                </div>
            </div>
            <!-- End Section Slider -->
        <% } %>


        <!-- Start Section Filter -->
        <div style="background-color:#FDFDFD">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="home-filter">
                            <form>
                                <div class="form-row">
                                    
                                    <div class="form-group col-md-3 mb-1">
                                        <select class="form-control">
                                            <option selected>صانع السيارة</option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-3 mb-1">
                                        <select class="form-control">
                                            <option selected>صانع السيارة</option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-3 mb-1">
                                        <select class="form-control">
                                            <option selected>صانع السيارة</option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-3 mb-1">
                                        <button class="btn btn-primary btn-block">بــــحــــث <i class="fa fa-angle-left" aria-hidden="true"></i></button>
                                    </div>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Section Filter -->


      <% if (mainCatigory) { %>
         <!-- Start Section mainCatigory -->
         <div class="home-categoreis pt-5">
            <div class="container">
                
                <div class="header">
                    <h6>اخر الاقسام الرءيسيه التي تم ادخالها مؤخرا</h6>
                </div>
                <div class="row">
                    <% mainCatigory.forEach((element , i) => { %>
                        <div class="col-lg-3">
                            <div class="cta-box">
                                <a href="/AllProduct?catigory=<%= element.id %>&search=">
                                    <h3><%=element["name_" + defaultLang]%> <span style="color:rgb(93, 93, 238)"> <%= mainCatigoryDescount[i] ? " خصم يصل الي " + mainCatigoryDescount[i] + "%" : "" %></span></h3>
                                    <img src="/admin/asset/images/categoris_photo/<%= element.image.split("--")[0] %>" class="img-fluid" alt="0" />
                                    <h4>تسوق الان</h4>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>

            </div>
        </div>
        <!-- End Section mainCatigory -->
      <% } %>

                
        <% if (supCatigory) { %>
            <% if (supCatigory.length > 0) { %>
            <!-- Start Section supCatigory -->
            <div class="home-categoreis">
                <div class="container">
                    <div class="header">
                        <h6>اخر الاقسام الفرعيه التي تم ادخالها مؤخرا</h6>
                    </div>
                    <div class="row">
                        <% supCatigory.forEach((element , i) => { %>
                            <div class="col-lg-3">
                                <div class="cta-box">
                                    <a href="/AllProduct?catigory=<%= element.id %>&search=">
                                        <h3><%=element["name_" + defaultLang]%> <span style="color:rgb(93, 93, 238)"> <%= supCatigoryDescount[i] ? " خصم يصل الي " + supCatigoryDescount[i] + "%" : "" %></span></h3>
                                        <img src="/admin/asset/images/subCatigory_photo/<%= element.image.split("--")[0] %>" class="img-fluid" alt="0" />
                                        <h4>تسوق الان</h4>
                                    </a>
                                </div>
                            </div>
                        <% }) %>
                    </div>

                </div>
            </div>
            <!-- End Section supCatigory -->
            <% } %>
        <% } %>


        <!-- Start Section supCatigory -->
        <% if (catigorysRelatedWithSearch) { %>
            <% if (catigorysRelatedWithSearch.length >= 4) { %>
                <div class="home-categoreis">
                    <div class="container">
                        <div class="header">
                            <h6>اقسام ترغب فيها</h6>
                        </div>
                        <div class="row">
                            <% catigorysRelatedWithSearch.forEach((element , i) => { %>
                                <div class="col-lg-3">
                                    <div class="cta-box">
                                        <a href="/AllProduct?catigory=<%= element.id %>&search=">
                                            <h3><%=element["name_" + defaultLang]%> <span style="color:rgb(93, 93, 238)"> <%= supCatigoryDescount[i] ? " خصم يصل الي " + supCatigoryDescount[i] + "%" : "" %></span></h3>
                                            <img src="/admin/asset/images/<%= (element.catigoryId == 0 ? "categoris_photo/" : "subCatigory_photo/")  + element.image.split("--")[0] %>" class="img-fluid" alt="0" />
                                            <h4>تسوق الان</h4>
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
        
                    </div>
                </div>
            <% } %>
        <% } %>
        <!-- End Section supCatigory -->
        <% if (newestProduct) { %>
            <% if (newestProduct.length > 0) { %>
                <!-- Start Section Top Sellers -->
                <div class="top-sellers">
                    <div class="container">
                        <div class="header">
                            <h6 style="color:#222;margin: 20px 0;">اجدد المنتجات</h6>
                        </div>
                        <section class="center slider">
                            <% newestProduct.forEach((element , i) => { %>
                                <div>
                                    <div class="product-grid3">
                                        <div class="product-image3">
                                            <a href="/productDetails/<%= element.id%>">
                                                <img style="height:290px" class="pic-1" src="/admin/asset/images/products_image/<%= element.productImage.split("--")[0] %>">
                                            </a>
                                        </div>
                                        <div class="product-content">
                                            <h3 class="title">
                                                <a href="/productDetails/<%= element.id%>"><%= element["productName_" + defaultLang]%></a>
                                                <span class="float-right"><%= element.productState ? "جديد" : "قديم" %></span>
                                            </h3>
                                            <p style="width:140px;margin:0;overflow: hidden;white-space: nowrap;"><%= element["ProductOverview_" + defaultLang] %></p>
                                            <div>
                                                <% if (element.descount) { %>
                                                    <span class="price main-color font-weight-bold"><%= (element.price - ((element.descount / 100) * element.price)).toFixed(3) %> Eg</span>
                                                    <span style="text-decoration: line-through" class="price main-color font-weight-bold"><%= element.price %> Eg</span>
                                                <% } else {%>
                                                    <span class="price main-color font-weight-bold"><%= element.price %> Eg</span>
                                                <% } %>
                                            </div>
                                            <ul class="rating d-inline" style="margin:0">
                                                <li class="fa fa-star <%= element.sumRate < 1 ? "disable" : "" %>"></li>
                                                <li class="fa fa-star <%= element.sumRate < 2 ? "disable" : "" %>"></li>
                                                <li class="fa fa-star <%= element.sumRate < 3 ? "disable" : "" %>"></li>
                                                <li class="fa fa-star <%= element.sumRate < 4 ? "disable" : "" %>"></li>
                                                <li class="fa fa-star <%= element.sumRate < 5 ? "disable" : "" %>"></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </section>

                    </div>
                </div>
                <!-- End Section Top Sellers -->
            <% } %>
        <% } %>



        <% if (productWithHigeRate) { %>
        <!-- Start Section Top Sellers -->
        <div class="top-sellers">
            <div class="container">
                <div class="header">
                    <h6 style="color:#222;margin: 20px 0;">منتجات باعلي بتقيم</h6>
                </div>
                <section class="center slider">
                    <% productWithHigeRate.forEach((element , i) => { %>
                        <div>
                            <div class="product-grid3">
                                <div class="product-image3">
